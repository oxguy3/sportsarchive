{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.form-signin {
  width: 100%;
  max-width: 400px;
  padding: 15px;
  margin: auto;
}
</style>
{% endblock %}

{% block body %}
<form method="post" class="form-signin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
          {{ 'login.loggedIn'|trans({'%user%': app.user.username }) }}
          <a href="{{ path('app_logout') }}">{{ 'login.logOut'|trans }}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'login.title'|trans }}</h1>
    <label for="inputEmail">{{ 'login.email'|trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
    <label for="inputPassword">{{ 'login.password'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {# https://symfony.com/doc/current/security/remember_me.html #}
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me">
            {{ 'login.rememberMe'|trans }}
        </label>
    </div>

    <button class="btn btn-primary" type="submit">
        {{ 'login.submit'|trans }}
    </button>
</form>
{% endblock %}
