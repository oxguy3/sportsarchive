{% extends "base.html.twig" %}

{% block title %}{{ team.name }} {{ roster.year }} roster – edit headshot{% endblock %}

{% block body %}
  <h1>
    <a href="/teams/{{ team.slug }}">{{ team.name }}</a>
    <a href="/teams/{{ team.slug }}/{{ roster.year }}">{{ roster.year }} roster</a>
    – edit headshot
  </h1>
  <div class="row">
    <div class="col-md-4 order-last">
      <img src="{{ headshot.thumbnailUrl }}" class="rounded img-fluid" alt="{{ 'rosterShow.headshot_alt'|trans({'%name%': headshot.personName}) }}">
    </div>
    <div class="col-md-8">
      {{ form(form) }}
    </div>
  </div>
{% endblock %}
