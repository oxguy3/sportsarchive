<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <sitemap>
    <loc>{{ url('sitemap_misc') }}</loc>
  </sitemap>
  {% for i in range(0, counts['team']) %}
    <sitemap>
      <loc>{{ url('sitemap_team', {page: i}) }}</loc>
    </sitemap>
  {% endfor %}
  {% for i in range(0, counts['document']) %}
    <sitemap>
      <loc>{{ url('sitemap_document', {page: i}) }}</loc>
    </sitemap>
  {% endfor %}
  {% for i in range(0, counts['roster']) %}
    <sitemap>
      <loc>{{ url('sitemap_roster', {page: i}) }}</loc>
    </sitemap>
  {% endfor %}
  <sitemap>
    <loc>{{ url('sitemap_season') }}</loc>
  </sitemap>
</sitemapindex>
