<ul class="nav nav-pills nav-fill mb-3">
  {{ _self.createActiveLink('/admin', 'Home') }}
  {{ _self.createActiveLink('/admin/readerifier', 'Readerifier') }}
  {{ _self.createActiveLink('/admin/nonsvg', 'Non-SVG logos') }}
</ul>

{% macro createActiveLink(url, label) %}
  <li class="nav-item">
    {% if url == app.request.pathinfo %}
      <a class="nav-link active" aria-current="page" href="{{ url }}">{{ label }}</a>
    {% else %}
      <a class="nav-link" href="{{ url }}">{{ label }}</a>
    {% endif %}
  </li>
{% endmacro %}