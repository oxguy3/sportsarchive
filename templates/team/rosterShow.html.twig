{% extends "base.html.twig" %}

{% block title %}{{ roster.year }} {{ team.name }} roster{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/dropzone.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
  <h1>
    <a href="/teams/{{ team.slug }}">{{ team.name }}</a>
    {{ roster.year }} roster
  </h1>
  {% if is_granted('ROLE_ADMIN') %}
    <p>
      <a href="/teams/{{ team.slug }}/{{ roster.year }}/new-headshot" class="btn btn-success">Add headshot manually</a>
      or drag headshots below.
    </p>

    <form action="{{ oneup_uploader_endpoint('headshots') }}" class="dropzone mb-3" id="headshotDropzone">
      <input type="hidden" name="rosterId" value="{{ roster.id }}">
    </form>
  {% endif %}
  <div class="row">
    {% for headshot in headshots %}
      <div class="col-lg-3 col-md-4 col-6">
        <div class="card mb-3" style="margin-left:auto; margin-right:auto;"><!--width:18rem; -->
          <img src="{{ imageUrlPrefix }}{{ headshot.filename }}" class="card-img-top" alt="{{ headshot.personName }} photo">
          <div class="card-body">
            <h5 class="card-title">
              {{ headshot.personName }}
              {% if headshot.jerseyNumber %}
                <span class="text-muted float-end">#{{ headshot.jerseyNumber }}</span>
              {% endif %}
            </h5>
            {% if is_granted('ROLE_ADMIN') %}
              <a href="/teams/{{ team.slug }}/{{ roster.year }}/edit-headshot/{{ headshot.id }}" class="btn btn-sm btn-primary">Edit</a>
              <a href="/teams/{{ team.slug }}/{{ roster.year }}/delete-headshot/{{ headshot.id }}" class="btn btn-sm btn-danger">Delete</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% else %}
      <p class="lead">No headshots found.</p>
    {% endfor %}
  </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/dropzone.js') }}"></script>
<script>
Dropzone.options.headshotDropzone = {
  maxFilesize: 20, // MB
  acceptedFiles: "image/jpeg"
};
</script>
{% endblock %}
