{% extends "base.html.twig" %}

{% block title %}{{ 'seasonSportPicker.title'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.sport-list li {
  list-style-type: none;
}
.sport-list i {
  display: block;
  font-size: 5rem;
}
.sport-list a, .sport-count {
  text-decoration: none;
}
.sport-label {
  text-decoration: underline;
}
</style>
{% endblock %}

{% block body %}
  <h1>{{ 'seasonSportPicker.title'|trans }}</h1>
  <ul class="sport-list row">
    <li class="col-xl-2 col-md-3 col-6 text-center mb-5">
      <a href="/seasons/all">
        <i class="i-star"></i>
        <span class="sport-label">{{ 'seasonSportPicker.allSports'|trans }}</span>
        <span class="sport-count text-muted">({{ totalCount }})</span>
      </a>
    </li>
    {% for sc in sportCounts %}
      <li class="col-xl-2 col-md-3 col-6 text-center mb-5">
        <a href="/seasons/{{ sc.sport=='' ? '_none' : sc.sport }}">
          <i class="i-{{ (sc.sport=='') ? 'ellipsis-h' : sportInfo.icons[sc.sport] }}"></i>
          <span class="sport-label">{{ (sc.sport=='') ? ('seasonSportPicker.noneSport'|trans) : sportInfo.capitalizedNames[sc.sport] }}</span>
          <span class="sport-count text-muted">({{ sc.count }})</span>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
